<h1> Actor #<%= @the_actor.id %> details </h1>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <%= @the_actor.image %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>


<h2>Filmography</h2>
<table border="1">
<% @filmography.each do |a_film|%>
  <tr>
  <td>
    <% m = Movie.where({ :id => a_film.movie_id}).at(0) %>
    <%= m.title%>
  </td>

  <td>
    <% m = Movie.where({ :id => a_film.movie_id}).at(0) %>
    <%= m.year%>
  </td>

  <td>
    <% m = Movie.where({ :id => a_film.movie_id}).at(0) %>
    <% d = Director.where({ :id => m.director_id}).at(0) %>
    <%= d.name%>
  </td>

  <td>
    <%= a_film.name%>
  </td>

  <td>
    <% m = Movie.where({ :id => a_film.movie_id}).at(0) %>
    <a href="/movies/<%= m.id %>">
      Show details
    </a>
  </td>
  </tr>
<% end %>

</table>
